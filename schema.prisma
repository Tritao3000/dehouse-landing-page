datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid()) @postgresql.Uuid
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime? @default(now())
}

model Event {
  id              String    @id @default(uuid()) @postgresql.Uuid
  cover_filesize  Int?
  cover_extension String?
  cover_width     Int?
  cover_height    Int?
  cover_id        String?
  name            String    @default("")
  date            DateTime  @postgresql.Date
  description     String    @default("")
  eventWebsite    String    @default("")
  featured        Boolean   @default(true)
  createdAt       DateTime? @default(now())
}

model Location {
  id        String @id @default(uuid()) @postgresql.Uuid
  name      String @default("")
  address   String @default("")
  zip       String @default("")
  city      String @default("")
  country   String @default("pt")
  amenities Json   @default("[]")
}

model Testimonial {
  id               String    @id @default(uuid()) @postgresql.Uuid
  avatar_filesize  Int?
  avatar_extension String?
  avatar_width     Int?
  avatar_height    Int?
  avatar_id        String?
  name             String    @default("")
  message          String    @default("")
  twitter          String    @default("")
  linkedin         String    @default("")
  createdAt        DateTime? @default(now())
}

model Type {
  id   String @id @default(uuid()) @postgresql.Uuid
  name String @default("")
}
